---
import BaseHead from '../components/BaseHead.astro';
import NavBar from '../components/NavBar.astro';
import BlogPost from '../components/BlogPost.astro';
import Footer from '../components/Footer.astro';


const { content } = Astro.props;
const { title, description, publishDate, author, heroImage, permalink, alt, twitterUrl } = content;
---

<html lang={content.lang || 'en'}>
	<head>
		<!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-lucario.css"/> -->
		<BaseHead {title} {description} {permalink} />
	</head>

	<body>
		<NavBar />
		<div class="wrapper">
			<BlogPost {title} {author} {heroImage} {publishDate} {alt} {twitterUrl}>
				<slot />
			</BlogPost>
		</div>
		<Footer />
	</body>
</html>
